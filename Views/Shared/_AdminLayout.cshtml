<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" />

    <style>
        body {
            display: flex;
            min-height: 100vh;
            overflow-x: hidden;
        }
        .sidebar {
            min-width: 220px;
            max-width: 220px;
            background-color: #343a40;
            padding: 1rem;
            color: white;
        }
        .sidebar a {
            color: white;
            display: block;
            padding: 0.5rem 0;
            text-decoration: none;
        }
        .sidebar a:hover {
            text-decoration: underline;
        }
        .content {
            flex-grow: 1;
            padding: 2rem;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h5>Admin Panel</h5>
        <a href="/Admin/Dashboard">📊 Dashboard</a>
        <a href="/Admin/ContactMessages">📥 Contact Messages</a>
        <a href="/Admin/Volunteers">👥 Volunteer Forms</a>
        <a href="/Admin/Referrals">🔁 Referrals</a>
        <a href="/Admin/Employment">💼 Employment Forms</a>
        <a href="/Admin/Logout">🚪 Logout</a>
    </div>

    <div class="content">
        @RenderBody()
    </div>
</body>
</html>
