<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Anarcare provides compassionate home health and hospice services in Houston." />
    <meta name="keywords" content="Home Health, Hospice Care, Houston, Anarcare, Skilled Nursing" />
    <meta name="author" content="Anarcare Team" />
    <title>@ViewData["Title"]Anarcare</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- App Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Arima+Madurai:wght@300;400;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Ysabeau:wght@400;600;700&display=swap" rel="stylesheet" />

    <!-- Icons & Animations -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />

    <link rel="icon" type="image/png" href="~/images/logo-anarcare.webp" asp-append-version="true" />

    @RenderSection("Styles", required: false)
    
</head>

<body class="@ViewData["BodyClass"]">
    @* <div id="google_translate_element" style="display: none;"></div> *@
    @* <button class="accessibility-tab" onclick="toggleAccessibilityView()" title="Toggle Accessibility View">
        ♿ Accessibility View
    </button> *@
    

    <div class="page-wrapper">
        <!-- Language Selector Bar (Above Navbar) -->
        <div class="language-bar">
        <div class="language-container">
            <i class="bi bi-translate language-icon"></i>
            <button onclick="changeLanguage('en')" class="language-btn">English</button>
            <button onclick="changeLanguage('es')" class="language-btn">Español</button>

        </div>
        </div>
        
        <!-- 🌐 Google Translate Hidden Container -->
        <div id="google_translate_element" style="position: absolute; top: -9999px; left: -9999px;"></div>


        <!-- === HEADER === -->
        <header class="top-header sticky">
            <div class="logo">
            <a asp-controller="Home" asp-action="Index">
                <img src="~/images/final_logo.webp" alt="Anarcare Logo" />
            </a>
        </div>

            <div class="mobile-toggle" id="mobileToggle">
                <i class="bi bi-list" id="toggleIcon"></i>
            </div>
            <nav class="main-nav" id="mainNav">
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Home" asp-action="aboutus">About Us</a></li>

                <!-- Services Dropdown -->
                <li class="dropdown">
                <div class="dropdown-wrapper">
                    <a asp-controller="Home" asp-action="services" class="dropdown-link">Services</a>
                    <button class="dropdown-toggle" aria-label="Toggle Services dropdown">
                        <i class="bi bi-chevron-down arrow-icon"></i>
                    </button>
                </div>
                <ul class="dropdown-content">
                    <li><a asp-controller="Home" asp-action="hospicecare">Hospice Care</a></li>
                    <li><a asp-controller="Home" asp-action="homehealth">Home Health</a></li>
                </ul>
                </li>

                <li><a asp-controller="Home" asp-action="referrals">Referrals</a></li>

                <!-- Careers Dropdown -->
                <li class="dropdown">
                <div class="dropdown-wrapper">
                    <a asp-controller="Home" asp-action="careers" class="dropdown-link">Join Our Team</a>
                    <button class="dropdown-toggle" aria-label="Toggle Careers dropdown">
                        <i class="bi bi-chevron-down arrow-icon"></i>
                    </button>
                </div>
                <ul class="dropdown-content">
                    <li><a asp-controller="Home" asp-action="employment">Careers</a></li>
                    <li><a asp-controller="Home" asp-action="volunteer">Volunteer</a></li>
                </ul>
                </li>

                <li><a href="@Url.Action("Index", "Home")#contact">Contact Us</a></li>
            </ul>
            </nav>

        </header>
        
        <main>
            @RenderBody()
        </main>

        <!-- === FOOTER === -->
      <footer class="custom-footer">
          <div class="footer-wrapper">
        <div class="footer-top">
            
            <!-- Quick Links (Moved to Left) -->
            <div class="footer-links">
            <h4>Quick Links</h4>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Home" asp-action="AboutUs">About Us</a></li>
                <li><a asp-controller="Home" asp-action="HospiceCare">Hospice Care</a></li>
                <li><a asp-controller="Home" asp-action="HomeHealth">Home Health</a></li>
                <li><a asp-controller="Home" asp-action="Referrals">Referral Form</a></li>
                <li><a asp-controller="Admin" asp-action="Index">Admin Portal</a></li>
            </ul>
            </div>

           <!-- Branding and Description (Now in Middle) -->
            <div class="footer-center">
  <div class="footer-main-logo-wrapper">
    <a asp-controller="Home" asp-action="Index">
    <img src="/images/logo-anarcare.webp" alt="Anarcare Logo" class="footer-main-logo" />
</a>

  </div>

  <p class="footer-description">
    Anarcare Hospice provides compassionate and comprehensive care for patients and families during life’s most challenging times. Our team is dedicated to comfort, dignity, and support.
  </p>

  <div class="footer-logos">
    <a href="https://www.drjanki.com/" target="_blank" rel="noopener">
      <img src="/images/logo1.png" alt="Logo 1" class="footer-sub-logo" />
    </a>
    <a href="https://georgetownihc.vercel.app/" target="_blank" rel="noopener">
      <img src="/images/logo2.png" alt="Logo 2" class="footer-sub-logo" />
    </a>
    <a href="https://chroniccarebridge.com/" target="_blank" rel="noopener">
      <img src="/images/logo3.png" alt="Logo 3" class="footer-sub-logo" />
    </a>
  </div>
</div>

            <!-- Contact Info (Stays on Right) -->
            <div class="footer-contact">
            <h4>Contact</h4>
            <p><a href="mailto:administrator@anarcare.com">administrator@anarcare.com</a></p>
            <p>13601 Woodforest Blvd,<br>Houston, TX 77015</p>
            <p>(713) 330-1964</p>
            <div class="footer-social-icons">
                <a href="https://www.facebook.com/patricia.janki.98/" target="_blank" rel="noopener noreferrer">
                <i class="bi bi-facebook"></i>
                </a>
                <a href="https://www.instagram.com/" target="_blank" rel="noopener noreferrer">
                <i class="bi bi-instagram"></i>
                </a>
                <a href="https://www.linkedin.com/company/e-care-medical-group/" target="_blank" rel="noopener noreferrer">
                <i class="bi bi-linkedin"></i>
                </a>
            </div>
            </div>
        </div>
</div>
        <!-- Bottom Bar -->
        <div class="footer-bottom">
            <span>© 2025 Anarcare. All rights reserved.</span>
            <a href="/privacy">Privacy Policy</a>
        </div>
        </footer>



    <!-- === JS Files === -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>AOS.init({ duration: 1000, once: false });</script>
    <!-- ✅ Your App Scripts -->
    @* <script src="~/js/script.js" asp-append-version="true"></script> *@
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Skip to Content -->
    <a href="#mainContent" class="skip-link visually-hidden-focusable">Skip to main content</a>
    
</body>
</html>